<div class="panel panel-default">
  <div class="panel-heading">
    <div class="list-group list-group-item active">
      <div class="row">
        <div class="col-md-6">
          <h4 class="list-group-item-heading"><%= @song.title %></h4>
          <p class="list-group-item-text"><%= @song.artist %></p>
        </div>
        <div class="col-md-6">
          <a class="btn btn-default btn-lg" href="/random" role="button"><span class="ion-refresh" aria-hidden="true"></span></a>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <p>
      <%= @song.comment %>
    </p>
    <div class="sl-grey">
    Last practiced: <%= @song.last_practiced.strftime("%d.%m.%Y") %> | <%= pluralize(@song.number_of_practices, 'practice') %>
    </div>
  </div>
  <div class="panel-footer">
    <div class="btn-group" role="group" aria-label="...">
      <%= link_to '<span class="ion-ios-heart"></span>'.html_safe + @song.rating.to_s, [:upvote, @song], class: "btn btn-primary btn-lg" %>
      <%= link_to '<span class="ion-ios-heart-outline"></span>'.html_safe,  [:downvote, @song], class: "btn btn-primary btn-lg" %>
      <%= link_to '<span class="ion-play"></span>'.html_safe, [:practice, @song], class: "btn btn-primary btn-lg" %>
      <%= link_to '<span class="ion-edit"></span>'.html_safe, edit_song_path(@song), class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>
