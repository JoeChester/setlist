<%= link_to '<span class="ion-plus"></span>'.html_safe + " New Playlist" , new_playlist_path , class: "btn btn-primary btn-lg newmargin" %>
<div class="list-group">
  <% @playlists.each do |playlist| %>
    <%= link_to playlist, class: "list-group-item" do %>
          <h4 class="list-group-item-heading"><%= playlist.name %></h4>
          <p class="list-group-item-text"><%= playlist.description %></p>
    <% end %>
  <% end %>
</div>
<br>
